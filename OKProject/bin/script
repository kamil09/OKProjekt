#!/bin/bash

i=1;
maxG=100;
ilosc=50;
minZ=1;
maxZ=50;

while [ $i -le 1000 ]
do
	java Main -NI $i -maxG $maxG -minZ $minZ -maxZ $maxZ -IZ $ilosc -TR0 IN_OUT/$i.ser > IN_OUT/$i.in
	java Main -ALL -SM 0.15 -PS 250 -PE 750 -T 8 -IM 0.5 -IK 0.1 -SF IN_OUT/$i.ser -NI $i > IN_OUT/$i.out
	i=$[i+1]
	maxG=$[maxG+1]
	if [ $[i%11] -eq 0 ] 
	then
		ilosc=$[ilosc+1]
		minZ=$[minZ+5];
		maxZ=$[maxZ+8];
	fi
	echo $i
done
